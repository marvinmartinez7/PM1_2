<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM1_2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Tarea 1.2" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtnombre" Placeholder="Ingrese su nombre" Keyboard="Text"/>
        <Entry x:Name="txtapellido" Placeholder="Ingrese su apellido" Keyboard="Text"/>
        <Entry x:Name="txtedad" Placeholder="Ingrese su edad" Keyboard="Numeric"/>
        <Entry x:Name="txtcorreo" Placeholder="Ingrese su correo" Keyboard="Email"/>
        
        <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked" />

    </StackLayout>

</ContentPage>
